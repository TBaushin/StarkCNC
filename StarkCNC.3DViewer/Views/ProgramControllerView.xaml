<UserControl x:Class="StarkCNC._3DViewer.Views.ProgramControllerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helix="http://helix-toolkit.org/wpf" 
             xmlns:lang="clr-namespace:StarkCNC._3DViewer.Localization" 
             xmlns:local="clr-namespace:StarkCNC._3DViewer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <helix:HelixViewport3D 
            x:Name="BendingView"
            Grid.Row="0"
            ViewCubeHeight="100"
            ViewCubeWidth="100"
            ViewCubeVerticalPosition="Bottom"
            RenderOptions.BitmapScalingMode="HighQuality"
            RenderOptions.EdgeMode="Unspecified"
            IsManipulationEnabled="True"
            IsViewCubeEdgeClicksEnabled="True">
            <helix:HelixViewport3D.Camera>
                <PerspectiveCamera
                    Position="-1571,4801,3774"
                    LookDirection="2038,-5200,-2930"
                    UpDirection="-0.145,0.372,0.917"/>
            </helix:HelixViewport3D.Camera>
            <helix:HelixViewport3D.Background>
                <LinearGradientBrush 
                    StartPoint="0.5,0"
                    EndPoint="0.5,1">
                    <GradientStop Color="#FF060A13" Offset="0"/>
                    <GradientStop Color="#FF1D64FF" Offset="1"/>
                </LinearGradientBrush>
            </helix:HelixViewport3D.Background>
            <helix:DefaultLights/>
        </helix:HelixViewport3D>
        <StackPanel Grid.Row="1">
            <Label Content="{x:Static lang:Language.Console}"/>
            <Slider
                x:Name="ConsoleSlider"
                Maximum="300"
                LargeChange="0.1"
                TickFrequency="0.1"/>
            <Separator/>
            <Label Content="{x:Static lang:Language.Bend}"/>
            <Slider
                x:Name="BendSlider"
                Maximum="195"
                LargeChange="0.1"
                TickFrequency="0.1"/>
            <Separator/>
            <Label Content="{x:Static lang:Language.Supply}"/>
            <Slider
                x:Name="SupplySlider"
                Maximum="3000"
                LargeChange="0.1"
                TickFrequency="0.1"/>
            <Separator/>
            <Label Content="{x:Static lang:Language.Height}"/>
            <Slider
                x:Name="HeightSlider"
                Maximum="180"
                LargeChange="0.1"
                TickFrequency="0.1"/>
            <Separator/>
            <Label Content="{x:Static lang:Language.Clamp}"/>
            <Slider
                x:Name="ClampSlider"
                Maximum="100"
                LargeChange="0.1"
                TickFrequency="0.1"/>
            <Separator/>
            <Label Content="{x:Static lang:Language.Press}"/>
            <Slider
                x:Name="PressSlider"
                Maximum="100"
                LargeChange="0.1"
                TickFrequency="0.1"/>
        </StackPanel>
    </Grid>
</UserControl>
