<Page x:Class="StarkCNC.Views.ProgramView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:vm="clr-namespace:StarkCNC.ViewModels"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:helix="http://helix-toolkit.org/wpf"
      xmlns:lang="clr-namespace:StarkCNC.Localization"
      xmlns:local="clr-namespace:StarkCNC.Views"
      d:DataContext="{d:DesignInstance vm:ProgramViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{x:Static lang:Language.ProgramPageTitle}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Stretch"
                Margin="10">
                <Button 
                    x:Name="CreateButton" 
                    Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock 
                            VerticalAlignment="Center"
                            Margin="0,4,0,0"
                            FontSize="10"
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            Text="&#xE710;"/>
                        <TextBlock 
                            Margin="8,0,0,0" 
                            Text="{x:Static lang:Language.CreateButton}"/>
                    </StackPanel>
                </Button>
                <Button 
                    x:Name="OpenButton" 
                    Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock 
                            VerticalAlignment="Center"
                            FontSize="10"
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            Text="&#xE8E5;"/>
                        <TextBlock 
                            Margin="8,0,0,0"
                            Text="{x:Static lang:Language.OpenButton}"/>
                    </StackPanel>
                </Button>
                <Button 
                    x:Name="SaveButton" 
                    Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock 
                            VerticalAlignment="Center"
                            FontSize="10"
                            FontFamily="{StaticResource SymbolThemeFontFamily}"
                            Text="&#xE74E;"/>
                        <TextBlock 
                            Margin="8,0,0,0"
                            Text="{x:Static lang:Language.SaveButton}"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <DataGrid 
                AutoGenerateColumns="False"
                CanUserAddRows="True"
                CanUserSortColumns="False"
                ColumnWidth="*"
                ItemsSource="{Binding bendingDatas, Mode=TwoWay}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{x:Static lang:Language.StraightLength}" Binding="{Binding StraightLength}"/>
                    <DataGridTextColumn Header="{x:Static lang:Language.BendingAngle}" Binding="{Binding BendingAngle}"/>
                    <DataGridTextColumn Header="{x:Static lang:Language.BendingRadius}" Binding="{Binding BendingRadius}"/>
                    <DataGridTextColumn Header="{x:Static lang:Language.RotationAngle}" Binding="{Binding RotationAngle}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <Border 
            Grid.Column="1"
            Margin="4,0,0,0"
            Padding="5,5,5,5"
            Background="{DynamicResource LayerFillColorDefaultBrush}"
            BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
            BorderThickness="1"
            CornerRadius="8,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <helix:HelixViewport3D 
                    x:Name="BendingView"
                    Grid.Row="0"
                    ViewCubeHeight="100"
                    ViewCubeWidth="100"
                    ViewCubeVerticalPosition="Bottom"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    RenderOptions.EdgeMode="Unspecified"
                    IsManipulationEnabled="True"
                    IsViewCubeEdgeClicksEnabled="True">
                    <helix:HelixViewport3D.Camera>
                        <PerspectiveCamera
                        Position="-1571,4801,3774"
                        LookDirection="2038,-5200,-2930"
                        UpDirection="-0.145,0.372,0.917"/>
                    </helix:HelixViewport3D.Camera>
                    <helix:HelixViewport3D.Background>
                        <LinearGradientBrush 
                        StartPoint="0.5,0"
                        EndPoint="0.5,1">
                            <GradientStop Color="#FF060A13" Offset="0"/>
                            <GradientStop Color="#FF1D64FF" Offset="1"/>
                        </LinearGradientBrush>
                    </helix:HelixViewport3D.Background>
                    <helix:DefaultLights/>
                </helix:HelixViewport3D>
                <StackPanel Grid.Row="1">
                    <Label Content="{x:Static lang:Language.ProgramConsoleSlider}"/>
                    <Slider
                        x:Name="ConsoleSlider"
                        Maximum="300"
                        LargeChange="0.1"
                        TickFrequency="0.1"/>
                    <Separator/>
                    <Label Content="{x:Static lang:Language.ProgramBendSlider}"/>
                    <Slider
                        x:Name="BendSlider"
                        Maximum="195"
                        LargeChange="0.1"
                        TickFrequency="0.1"/>
                    <Separator/>
                    <Label Content="{x:Static lang:Language.ProgramSupplySlider}"/>
                    <Slider
                        x:Name="SupplySlider"
                        Maximum="3000"
                        LargeChange="0.1"
                        TickFrequency="0.1"/>
                    <Separator/>
                    <Label Content="{x:Static lang:Language.ProgramHeightSlider}"/>
                    <Slider
                        x:Name="HeightSlider"
                        Maximum="180"
                        LargeChange="0.1"
                        TickFrequency="0.1"/>
                    <Separator/>
                    <Label Content="{x:Static lang:Language.ProgramClampSlider}"/>
                    <Slider
                        x:Name="ClampSlider"
                        Maximum="100"
                        LargeChange="0.1"
                        TickFrequency="0.1"/>
                    <Separator/>
                    <Label Content="{x:Static lang:Language.ProgramPressSlider}"/>
                    <Slider
                        x:Name="PressSlider"
                        Maximum="100"
                        LargeChange="0.1"
                        TickFrequency="0.1"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
